datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  isAdmin   Boolean   @default(false)
  password  String
  games     Game[]    @relation("Game_player")
  createdAt DateTime? @default(now())
}

model Game {
  id          String    @id @default(cuid())
  name        String    @default("")
  description String    @default("")
  version     Float
  createdAt   DateTime? @default(now()) @map("created_at")
  modifiedAt  DateTime? @default(now()) @map("modified_at")
  active      Boolean   @default(false)
  tags        Tag[]     @relation("Game_tags")
  player      User?     @relation("Game_player", fields: [playerId], references: [id])
  playerId    String?   @map("player")

  @@index([playerId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  games Game[] @relation("Game_tags")
}

model Analytic {
  id        String  @id @default(cuid())
  analytics String?
}
